<xml>

	<set name="NN_BUILD_TARGET" value="NX-NXFP2-a64" />
	<set name="NN_BUILD_TYPE" value="Develop" if="debug" />
	<set name="NN_BUILD_TYPE" value="Release" unless="debug" />
	<set name="LIME_SWITCH" value="1"/>
	<set name="LIME_SDL_SYSWM_EVENTS" value="1"/>
	
	<include name="${HXCPP}/build-tool/BuildCommon.xml" />

	<files id="main">
		
		<file name="Main.cpp" />
		
	</files>
	
	<target id="main" output="Main${DBG}" tool="linker" toolid="exe">
		
		<files id="main" />
		
		
		<lib name="C:/HaxeToolkit/haxe/lib/lime-switch/ndll/Switch/liblime-64.a" />

		<lib name="${LIBPREFIX}ApplicationMain${DBG}${LIBEXT}" />

		<!--
			NOTE: The below libs are just passed in as flags to the linker. These could be
			in the toolchain.xml, but the order that these flags are passed in is
			important. Basically, these flags must come after all of the object files and
			libraries that hxcpp passes in.
		-->
		<lib name="-Wl,--end-group" />
		<lib name="-Wl,--start-group" />
		<!--<lib name="${NINTENDO_SDK_ROOT}/Libraries/${NN_BUILD_TARGET}/${NN_BUILD_TYPE}/libnn_profiler.a" />-->
		<lib name="${NINTENDO_SDK_ROOT}/Libraries/${NN_BUILD_TARGET}/${NN_BUILD_TYPE}/libnn_init_memory.a" />
		<lib name="${NINTENDO_SDK_ROOT}/Libraries/${NN_BUILD_TARGET}/${NN_BUILD_TYPE}/nnSdk.nss" />
		<lib name="${NINTENDO_SDK_ROOT}/Libraries/${NN_BUILD_TARGET}/${NN_BUILD_TYPE}/opengl.nss" />
		<lib name="${NINTENDO_SDK_ROOT}/Libraries/${NN_BUILD_TARGET}/${NN_BUILD_TYPE}/vulkan.nss" />
		<lib name="${NINTENDO_SDK_ROOT}/Libraries/${NN_BUILD_TARGET}/${NN_BUILD_TYPE}/libnn_gll.a" />
		<lib name="-Wl,--end-group" />
		<lib name="${NINTENDO_SDK_ROOT}/Libraries/${NN_BUILD_TARGET}/${NN_BUILD_TYPE}/crtend.o" />

		
	</target>
	
	<target id="default">
		
		<target id="main" />
		
	</target>
	
</xml>
